{
    "name": "slepic/php-template",
    "description": "Simple PHP abstraction of template rendering.",
    "type": "library",
    "require": {
        "php": "^7.4 || ^8.0"
    },
    "autoload": {
        "psr-4": {
            "Slepic\\Templating\\Template\\": "src"
        }
    },
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "slepic",
            "email": "gslepic@gmail.com"
        }
    ],
    "suggest": {
        "slepic/php-template-implementation": "See existing TemplateInterface implementations.",
        "slepic/php-template-consumer": "See existing TemplateInterface consumers"
    },
    "provide": {
        "slepic/php-template-implementation": "*"
    },
    "minimum-stability": "stable",
    "require-dev": {
        "phpunit/phpunit": "^9.1",
        "squizlabs/php_codesniffer": "^3.5"
    }
}
